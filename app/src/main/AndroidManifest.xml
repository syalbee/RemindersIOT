<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remindersiot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RemindersIOT">
        <activity android:name=".views.Settings"></activity>
        <activity android:name=".views.DetailDone" />
        <activity android:name=".views.Detail" />
        <activity android:name=".views.Done" />
        <activity android:name=".views.AddCourse" />
        <activity android:name=".views.AddReminder" />
        <activity android:name=".views.Active" />
        <activity android:name=".views.Home" />
        <activity android:name=".views.Signup" />
        <activity android:name=".views.Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>